generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

// datasource db {
//     provider = "sqlite"
//     url      = env("DATABASE_URL")
// }

model Dinner {
    id        Int      @id @default(autoincrement())
    name      String
    tags      Tag[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    Plan      Plan[]
    link      String?
    notes     String?

    @@index([name])
}

model Tag {
    value  String   @id
    Dinner Dinner[]

    @@index([value])
}

model Plan {
    id     Int      @id @default(autoincrement())
    dinner Dinner   @relation(fields: [dinnerId], references: [id])
    date   DateTime @unique

    dinnerId Int

    @@index([date])
}
